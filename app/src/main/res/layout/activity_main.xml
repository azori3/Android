<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apps"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/baner2"
        android:id="@+id/vies"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Job"
        android:textSize="35sp"
        android:textColor="@color/cardview_dark_background"
        android:layout_centerHorizontal="true"
        android:id="@+id/titreJob"
        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/vies"
        android:background="@color/colorPrimaryDark"

        android:elevation="20dp"
        app:cardCornerRadius="20dp"

        android:id="@+id/cardView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:gravity="center"
            android:orientation="vertical">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listjobs">
    </ListView>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cardView"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/cardView"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_input_add"
        app2:backgroundTint="@color/colorAccent"
        app2:elevation="2dp"
         />

</RelativeLayout>
