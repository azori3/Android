<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apps"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/baner2" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View job"
        android:textSize="35sp"
        android:textColor="@color/grey"
        android:layout_centerHorizontal="true"
        android:id="@+id/titreJob"

        />
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/titreJob"
        android:elevation="20dp"
        app:cardCornerRadius="20dp"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center"
        android:orientation="vertical">





        <ImageView
            android:id="@+id/product_img"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="fitCenter"
            android:layout_weight="3"
            android:src="@drawable/product" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"

            android:padding="5dp">

            <TextView
                android:id="@+id/ali"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="2dp"
                android:layout_centerVertical="true"
                android:text="ID :"
                android:textColor="@color/Teal" />

            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ali"
                android:paddingBottom="2dp"
                android:layout_centerHorizontal="true"
                android:text="Name :"
                android:textColor="@color/Teal" />

            <TextView
                android:id="@+id/product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:layout_below="@+id/product_name"
                android:layout_centerHorizontal="true"
                android:text="Description :"
                android:textColor="@color/Teal" />

            <TextView
                android:id="@+id/product_price"
                android:paddingBottom="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_description"
                android:layout_centerHorizontal="true"
                android:text="Price :"

                android:textColor="@color/Teal" />


        </RelativeLayout>

 <LinearLayout
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     >

     <Button
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textColor="@color/cardview_light_background"
         android:text="EnvoyerMail"
         android:background="@drawable/rectgoogle"
         android:id="@+id/Sendmail"
         />
     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/cardview_light_background"
         android:text="Signaler"
         android:background="@drawable/rectgoogle"
         android:id="@+id/signaler"/>
     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@color/cardview_light_background"
         android:text="Signaler"
         android:background="@drawable/rectgoogle"
         android:id="@+id/SMS"/>
 </LinearLayout>





    </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
